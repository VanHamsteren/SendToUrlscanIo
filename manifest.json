{
    "manifest_version": 3,
    "name": "Verify link with urlscan.io",
    "short_name": "urlscanner",
    "author": "Paul Rutten",
    "version": "1.1.0",
    "description": "Right-click hyperlinks to send them to urlscan.io and view the results. Professional security analysis at your fingertips.",
    "permissions": [
        "contextMenus",
        "activeTab",
        "tabs",
        "storage",
        "notifications"
    ],
    "host_permissions": [
        "https://urlscan.io/*"
    ],
    "icons": {
        "16": "icons/urlscan_16.png",
        "32": "icons/urlscan_32.png",
        "256": "icons/urlscan_256.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "background": {
        "scripts": ["background.js"]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "urlscanner@paulrutten.nl",
            "strict_min_version": "109.0"
        }
    }
}