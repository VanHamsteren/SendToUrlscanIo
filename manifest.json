{
    "manifest_version": 2,
    "name": "Verify link with urlscan.io",
    "short_name": "urlscanner",
    "author": "Paul Rutten",
    "version": "1.0",
    "description": "Right-click hyperlinks to send them to urlscan.io and view the results.",
    "permissions": [
        "contextMenus",
        "activeTab",
        "tabs",
        "storage",
        "notifications",
        "https://urlscan.io/*"
    ],
    "icons": {
        "16": "icons/urlscan_16.png",
        "32": "icons/urlscan_32.png"
    },
    "options_ui": {
        "page": "options.html"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "applications": {
        "gecko": {
            "id": "urlscanner@paulrutten.nl"
        }
    }
}